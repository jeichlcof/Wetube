extends layouts/main

block content
    .form-container
        form(action=`/users${routes.editProfile}`, method="post")
            label(for="avatar") Avatar
            input(type="file", id="avatar", name="avatar")
            input(true="text", placeholder="Name", name="name")
            input(true="email", placeholder="Email", name="email")
            input(type="submit", valure="Update Profile")
        a.form-container__link(href=`/users${routes.changePassword}`) Change Password